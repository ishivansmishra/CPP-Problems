#include<iostream>

using namespace std;

int large(int arr[],int n){
    int large = arr[0];
    for(int i = 0;i<n;i++){
        if(arr[i]>large){
            large = arr[i];
        }
    }
    return large;

}

int main () {
    int n;
    cout<<"Enter The Size of Array : ";
    cin>>n;

    int arr[n];
      cout<<"Enter The Element in the array : ";
      for(int i = 0;i<n;i++){
       cin>>arr[i];
      }

      cout<<"The Largest number in the array is : "<<large(arr,n);






    return 0;
}
