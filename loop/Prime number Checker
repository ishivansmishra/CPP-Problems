#include <iostream>

using namespace std;

int main()
{
    int n;
    cout << "Enter The Value of N : " << endl;
    cin >> n;

    for (int i = 2; i < n; i++)
    {
        if (n % i == 0)
        {
            cout << "The Number " << n << " is not a prime number." << endl;
            break;
        }
        else if (n % i != 0)
        {
            cout << "The Number " << n << " is a prime number." << endl;
            break;
        }
        else
        {
            cout << "Invalid";
            break;
        }
    }

    return 0;
}
