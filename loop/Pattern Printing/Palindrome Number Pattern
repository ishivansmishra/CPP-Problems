#include <iostream>

using namespace std;

int main()
{
    int n;
    cout << "Enter The Number : ";
    cin >> n;

    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n - i; j++)
        {
            cout << " ";
        }
        for (int k = 1; k <= i; k++)
        {
            cout << " " << i << " ";
        }
        for (int g = i - 1; g >= 1; g--)
        {
            cout << " " << g << " ";
        }
        cout << endl;
    }

    return 0;
}
