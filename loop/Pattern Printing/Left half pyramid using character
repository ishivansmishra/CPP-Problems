#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    int n;
    cout << "Enter The Number : ";
    cin >> n;

    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n - i; j++)
        {
            cout << " ";
        }
        for (int k = 1; k <= i; k++)
        {
            char ch = 'A' + i - 1;
            cout << ch;
        }
        cout << endl;
    }

    return 0;
}
