#include <iostream>

using namespace std;

int main()
{
    int n;
    cout << "Enter The Number : " << endl;
    cin >> n;

    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n - i; j++)
        {
            cout << " ";
        }
        for (int k = 1; k <= 2 * i - 1; k++)
        {
            char ch = 'A' + i + k - 2;
            cout << ch;
        }
        cout << endl;
    }

    return 0;
}
