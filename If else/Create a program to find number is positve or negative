#include<iostream>
#include<iomanip>

using namespace std;

int main () {
    int num;
    cout<<"Enter The Number : ";
    cin>>num;

    if(num>0){
        cout<<num<<" "<<"is a postive number "<<endl;
    }
    else if(num == 0){
        cout<<num<<" "<<"is a zero";
    }
    else if (num > 0) {
        cout<<num<<""<<"is a negative number";
    }
     else {
        cout<<num<<" "<<"Invalid";
     }
